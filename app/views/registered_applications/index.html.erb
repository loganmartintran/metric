<div class="container text-center">
  <div class="row">
  <h1>Apps</h1>
  <% if current_user %>
    <div>
      <%= link_to "Register a new app", new_registered_application_path, class: 'btn btn-success' %>
    </div>
  <% end %>
  <% @apps.each do |app| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to app.name, app %>
        </h4>
      </div>
    </div>
  <% end %>
  </div>
</div>
