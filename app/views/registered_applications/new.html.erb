<div class="container">
  <h1>Add a new Application</h1>
  <div class="row">
    <div class="col-md-8">
      <%= form_for @app do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', placeholder: "Enter App Name" %>
        </div>
        <div class="form-group">
          <%= f.label :url %>
          <%= f.text_field :url, class: 'form-control', placeholder: "Enter App URL" %>
        </div>
        <div class="form-group">
        <%= f.submit "Register App", class: 'btn btn-success' %>
        </div>
      <% end  %>
    </div>
  </div>
</div>
